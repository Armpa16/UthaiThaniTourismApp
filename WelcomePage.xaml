<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UthaiThaniTourismApp.Views.WelcomePage">

    
    
    <Grid>
        <!-- รูปภาพพื้นหลังเต็มจอ -->
        <Image Source="welcome.jpg" 
               Aspect="AspectFill" 
               VerticalOptions="FillAndExpand" 
               HorizontalOptions="FillAndExpand"/>

        <!-- กล่องครอบข้อความและปุ่ม -->
        <StackLayout VerticalOptions="End" Padding="20" Spacing="20">
            <!-- ข้อความ -->
            <Label Text="ค้นหาสถานท่องเที่ยวที่ใช่สำหรับคุณในจังหวัดอุทัยธานี" 
               FontSize="Large" 
               TextColor="White" 
               LineBreakMode="WordWrap" 
               WidthRequest="280"
               HorizontalTextAlignment="Center" 
               VerticalOptions="Center" 
               HorizontalOptions="Center"
               FontAttributes="Bold"/>

            <!-- ปุ่มเริ่ม -->
            <Button Text="เริ่มต้น" 
                    BackgroundColor="#007AFF" 
                    TextColor="White" 
                    HorizontalOptions="Center" 
                    WidthRequest="250" 
                    HeightRequest="60" 
                    CornerRadius="15" 
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Clicked="OnExploreClicked"/>
               
        </StackLayout>
    </Grid>
</ContentPage>